{% block testlist %}
    {% for test in tests %}
        <div class="row">
            <div class="col">
                <a href="">
                    <h4>{{ test.name }}</h4>
                </a>
            </div>
            <div class="col">
                <span class="float-right">{{ test.successAttempts }} / {{ test.allAttempts }}</span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {% for tag in test.tags %}
                    <a href="{{ path('tests', {'tag': tag.name}) }}"
                       class="badge badge-info">
                        {{ tag.name }}
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}